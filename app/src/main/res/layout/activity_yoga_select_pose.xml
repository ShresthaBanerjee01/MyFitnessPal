<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".yoga_select_pose"
    android:background="@color/white">
    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#D3F8E1">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discover serenity through yoga"
            android:textColor="#05386B"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/raleway"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/yoga"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:orientation="vertical"
            android:layout_marginBottom="20dp">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/boat_pose"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button2"
                android:text="Boat Pose (Naukasana)"
                android:textAllCaps="false"
                android:textSize="22.2sp"
                android:fontFamily="@font/raleway"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/boatposesize"
                android:drawablePadding="40dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="20dp"
                android:onClick="ImageButtonClicked">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bow_pose"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button2"
                android:text="Bow Pose (Dhanurasana)"
                android:textAllCaps="false"
                android:textSize="22.2sp"
                android:fontFamily="@font/raleway"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/bowposesize"
                android:drawablePadding="40dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="20dp"
                android:onClick="ImageButtonClicked">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cobra_pose"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button2"
                android:text="Cobra Pose (Bhujangasana)"
                android:textAllCaps="false"
                android:textSize="22.2sp"
                android:fontFamily="@font/raleway"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/cobraposesize"
                android:drawablePadding="40dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="20dp"
                android:onClick="ImageButtonClicked">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/crescent_lunge"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button2"
                android:text="Crescent Lunge"
                android:textAllCaps="false"
                android:textSize="22.2sp"
                android:fontFamily="@font/raleway"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/crescentlungesize"
                android:drawablePadding="40dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="20dp"
                android:onClick="ImageButtonClicked">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/downward_facing_dog"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button2"
                android:text="Downward\nFacing Dog"
                android:textAllCaps="false"
                android:textSize="22.2sp"
                android:fontFamily="@font/raleway"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/downwardfacingdogsize"
                android:drawablePadding="40dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="20dp"
                android:onClick="ImageButtonClicked">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/easy_pose"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button2"
                android:text="Easy Pose\n(Sukhasana)"
                android:textAllCaps="false"
                android:textSize="22.2sp"
                android:fontFamily="@font/raleway"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/easyposesize"
                android:drawablePadding="40dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="20dp"
                android:onClick="ImageButtonClicked">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/half_pegion_pose"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button2"
                android:text="Half Pegion Pose"
                android:textAllCaps="false"
                android:textSize="22.2sp"
                android:fontFamily="@font/raleway"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/halfpegionsize"
                android:drawablePadding="40dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="20dp"
                android:onClick="ImageButtonClicked">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/low_lunge"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button2"
                android:text="Low Lunge"
                android:textAllCaps="false"
                android:textSize="22.2sp"
                android:fontFamily="@font/raleway"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/lowlungesize"
                android:drawablePadding="40dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="20dp"
                android:onClick="ImageButtonClicked">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/upward_bow"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button2"
                android:text="Upward Bow"
                android:textAllCaps="false"
                android:textSize="22.2sp"
                android:fontFamily="@font/raleway"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/upwardbowsize"
                android:drawablePadding="40dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="20dp"
                android:onClick="ImageButtonClicked">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/warrior_pose"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button2"
                android:text="Warrior Pose"
                android:textAllCaps="false"
                android:textSize="22.2sp"
                android:fontFamily="@font/raleway"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/warriorposesize"
                android:drawablePadding="40dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="20dp"
                android:onClick="ImageButtonClicked">

            </androidx.appcompat.widget.AppCompatButton>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/warrior_pose2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/custom_button2"
                android:text="Warrior Pose 2"
                android:textAllCaps="false"
                android:textSize="22.2sp"
                android:fontFamily="@font/raleway"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:drawableRight="@drawable/warriorpose2size"
                android:drawablePadding="40dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="20dp"
                android:onClick="ImageButtonClicked">

            </androidx.appcompat.widget.AppCompatButton>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>