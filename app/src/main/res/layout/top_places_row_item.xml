<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:layout_marginLeft="10dp">
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
       android:id="@+id/box"
    android:layout_width="150dp"
    android:layout_height="120dp"
    android:layout_marginStart="8dp"
    android:background="@drawable/rounditem"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="4dp"
    >


    <ImageView
        android:id="@+id/place_image"
        android:layout_width="110dp"
        android:layout_height="90dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="@id/box"
        app:layout_constraintVertical_bias="0.12"
        app:srcCompat="@drawable/recentimage1" />

    <TextView
        android:id="@+id/place_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="AM Lake"
        android:fontFamily="@font/raleway"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/box"
        app:layout_constraintEnd_toEndOf="@id/box"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="@id/box"
        app:layout_constraintTop_toBottomOf="@+id/place_image"
        app:layout_constraintVertical_bias="0.058"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>
</RelativeLayout>