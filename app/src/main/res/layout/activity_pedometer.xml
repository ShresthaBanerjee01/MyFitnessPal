<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".pedometer">
    <RelativeLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="#D3F8E1">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Step by step,\nTowards better health"
            android:textColor="#05386B"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="28dp"
            android:fontFamily="@font/raleway"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="300dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/running" />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/stepbox"
        android:layout_width="150dp"
        android:layout_height="150dp"
      android:layout_below="@id/targetid"
        android:layout_marginStart="120dp"
       android:layout_centerHorizontal="true"
        android:layout_marginEnd="141dp"
        android:layout_marginTop="5dp"
        android:background="@color/white">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_above="@id/stepsTaken"
            android:layout_centerInParent="true"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:scaleType="centerCrop"
            android:src="@drawable/shoes">

        </ImageView>

        <TextView
            android:id="@+id/stepsTaken"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/raleway"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="35sp"
            >

        </TextView>
    </RelativeLayout>

    <RelativeLayout
android:id="@+id/stepsTakenbox"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@id/stepbox"
        android:layout_marginBottom="-90dp"
        android:layout_marginLeft="20dp" android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/raleway"
            android:text="Today's Count"
            android:textAlignment="center"
            android:textColor="#05386B"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/stepsdaily"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/raleway"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="35sp"
            ></TextView></RelativeLayout>
    <RelativeLayout
android:id="@+id/stepstogobox"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@id/stepbox"
        android:layout_alignRight="@id/stepbox"
        android:layout_marginBottom="-90dp"
        android:layout_marginRight="-120dp"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/raleway"
            android:text="Steps to go"
            android:textAlignment="center"
            android:textColor="#05386B"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/stepstogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/raleway"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="35sp"
            ></TextView></RelativeLayout>

    <ImageButton
        android:id="@+id/targetid"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/layout"
        android:layout_marginTop="25dp"
        android:background="@color/white"
        android:src="@drawable/target"
        tools:ignore="SpeakableTextPresentCheck"></ImageButton>
    <EditText
        android:id="@+id/targetset"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@id/layout"
       android:layout_toEndOf="@id/targetid"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/raleway"
        android:text="1000"
        android:textColor="@color/black"
        android:textSize="40dp"
        android:textStyle="bold"
        android:background="@android:color/transparent"
     ></EditText>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/targetset"
        android:layout_below="@id/layout"
        android:layout_marginStart="15dp"
       android:layout_marginTop="45dp"
        android:fontFamily="@font/raleway"
        android:text="steps"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />


    <ImageButton
        android:id="@+id/calBurnt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="25dp"
        android:background="@color/white"
        android:src="@drawable/calories"
        tools:ignore="SpeakableTextPresentCheck" />
    <ImageButton
        android:id="@+id/table"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="25dp"
        android:background="@color/white"
        android:src="@drawable/record"
        tools:ignore="SpeakableTextPresentCheck" />
    <RelativeLayout
    android:id="@+id/distancecover"
    android:layout_width="120dp"
    android:layout_height="80dp"
    android:layout_alignBottom="@id/stepbox"
    android:layout_marginBottom="-190dp"
    android:layout_marginLeft="20dp" android:background="@color/white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/raleway"
        android:text="Distance covered (in Km)"
        android:textAlignment="center"
        android:textColor="#05386B"
        android:textSize="15sp"
        android:textStyle="bold"></TextView>

    <TextView
        android:id="@+id/distance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/raleway"
        android:text="0"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="35sp"
       ></TextView></RelativeLayout>
    <RelativeLayout
        android:id="@+id/distancetogobox"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@id/stepbox"
        android:layout_alignRight="@id/stepbox"
        android:layout_marginBottom="-190dp"
        android:layout_marginRight="-120dp"
        android:background="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/raleway"
            android:text="Distance to go
            (in Km)"
            android:textAlignment="center"
            android:textColor="#05386B"
            android:textSize="15sp"
            android:textStyle="bold"></TextView>
        <TextView
            android:id="@+id/distancetogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:fontFamily="@font/raleway"
            android:text="0"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="35sp"
            ></TextView></RelativeLayout>


    <Spinner
        android:id="@+id/genderSpinner"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:background="@drawable/genderselect"
        android:layout_marginBottom="140dp"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    <TextView
        android:id="@+id/selectedGenderTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text=""
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
         android:textColor="@color/black"
        android:layout_marginBottom="100dp"
        android:textSize="12sp"
        android:textStyle="bold"/>
</RelativeLayout>